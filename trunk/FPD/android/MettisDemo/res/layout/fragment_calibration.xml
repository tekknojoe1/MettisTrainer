<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bendtech.fpd.mettisdemo.CalibrationFragment" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageFootBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/foot_background" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="Calibration"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </FrameLayout>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF00"/>

    <TextView
        android:id="@+id/textError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layoutSensors1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textLeftS0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:textColor="#FFFFFF00"
            android:text="0" />
        <TextView
            android:id="@+id/textLeftS1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:textColor="#FFFFFF00"
            android:text="0" />
        <TextView
            android:id="@+id/textLeftS2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="64dp"
            android:typeface="monospace"
            android:textColor="#FFFFFF00"
            android:text="0" />
        
        <TextView
            android:id="@+id/textRightS0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:textColor="#FFFFFF00"
            android:text="0" />
        <TextView
            android:id="@+id/textRightS1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:textColor="#FFFFFF00"
            android:text="0" />
        <TextView
            android:id="@+id/textRightS2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:textColor="#FFFFFF00"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSensors2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textLeftCalS0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:text="0" />
        <TextView
            android:id="@+id/textLeftCalS1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:text="0" />
        <TextView
            android:id="@+id/textLeftCalS2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="64dp"
            android:typeface="monospace"
            android:text="0" />
        
        <TextView
            android:id="@+id/textRightCalS0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:text="0" />
        <TextView
            android:id="@+id/textRightCalS1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:text="0" />
        <TextView
            android:id="@+id/textRightCalS2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:typeface="monospace"
            android:text="0" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Done" />
    
</LinearLayout>
