<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff192325"
    tools:context="com.flexpoint.fpd.RecordActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/deviceStatus"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Connecting to devices..."
        android:textColor="#ffffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#ff282527" >

        <ToggleButton
            android:id="@+id/toggleRecord"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"            
            android:textColor="#ffffffff"
            android:textOff="Rec"
            android:textOn="Stop" />

        <TextView
            android:id="@+id/textCountDown"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.40"
            android:text="4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff" />

        <ImageView
            android:id="@+id/imageRecLight"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:src="@drawable/recording_light_off" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressTime"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <FrameLayout
        android:id="@+id/frameLayoutSensLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frameLayoutSensRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >
    </FrameLayout>

    <Button
        android:id="@+id/buttonAnalyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        android:text="Analyze" />

</LinearLayout>
