<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff192325"
    tools:context="com.flexpoint.fpd.DataActivityFragment" >

    <TextView
        android:id="@+id/deviceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="Connecting to devices..." />

    <com.flexpoint.fpd.FootView
        android:id="@+id/footView1"
        
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="292dp"
        android:src="@drawable/tooties2" />
    
    <com.flexpoint.fpd.BarView
        android:id="@+id/barView1"
        
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

</LinearLayout>