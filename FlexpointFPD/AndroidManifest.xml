<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flexpoint.fpd"
    android:versionCode="6"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flexpoint.fpd.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flexpoint.fpd.DataActivity"
            android:label="@string/title_activity_data"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flexpoint.fpd.RecordActivity"
            android:label="@string/title_activity_record"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flexpoint.fpd.AnalyzeActivity"
            android:label="@string/title_activity_analyze" >
        </activity>
        <activity
            android:name="com.flexpoint.fpd.PairingActivity"
            android:label="@string/title_activity_pairing" >
        </activity>
        <activity
            android:name="com.flexpoint.fpd.PlotActivity"
            android:label="@string/title_activity_plot"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
